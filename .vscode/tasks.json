{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create cluster",
      "detail": "Create a K3s cluster for the deployment",
      "type": "shell",
      "command": "k3d cluster create -c assets/k3d.config.yml",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "color": "terminal.ansiMagenta",
        "id": "triangle-up"
      },
    },
    {
      "label": "Delete cluster",
      "detail": "Delete the runnign K3s clsuter",
      "type": "shell",
      "command": "k3d cluster delete -c assets/k3d.config.yml",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "color": "terminal.ansiMagenta",
        "id": "triangle-down"
      },
    },
    {
      "label": "Watch kubectl",
      "detail": "Watch kubernetes resources",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "scripts/kubectl-watch.sh",
      "args": [
        "${input:resources}"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "color": "terminal.ansiBlue",
        "id": "eye"
      },
      "runOptions": {
        "instanceLimit": 5
      }
    },
    {
      "label": "Run tests",
      "detail": "Run tests using TerraTest",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "scripts/run-tests.sh",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "beaker",
        "color": "terminal.ansiGreen"
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "terraform destroy",
      "detail": "Destroy the resources managed by this repo",
      "type": "shell",
      "command": "scripts/terraform.sh",
      "args": [
        "destroy",
        "${input:tfApplyDestroyExtraArgs}"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "icon": {
        "id": "debug-stop",
        "color": "terminal.ansiRed"
      }
    },
    {
      "label": "terraform apply",
      "detail": "Create & alter the resources",
      "type": "shell",
      "command": "scripts/terraform.sh",
      "args": [
        "apply",
        "${input:tfApplyDestroyExtraArgs}"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "play",
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "terraform init",
      "detail": "Initialize Terraform providers",
      "type": "shell",
      "command": "terraform",
      "args": [
        "init"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "icon": {
        "id": "chevron-up",
        "color": "terminal.ansiYellow"
      }
    },
    {
      "label": "terraform plan",
      "detail": "Initialize Terraform providers",
      "type": "shell",
      "command": "scripts/terraform.sh",
      "args": [
        "plan",
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "checklist",
        "color": "terminal.ansiYellow"
      },
      "runOptions": {
        "instanceLimit": 1,
      }
    },
  ],
  "inputs": [
    {
      "id": "modName",
      "description": "Go module name for the tests folder",
      "type": "promptString"
    },
    {
      "id": "resources",
      "description": "Input Kubernetes resources you would like to watch",
      "default": "po svc ing",
      "type": "promptString"
    },
    {
      "id": "tfApplyDestroyExtraArgs",
      "description": "Extra args to add for Terraform apply and destroy",
      "default": "--auto-approve",
      "type": "promptString"
    }
  ]
}
